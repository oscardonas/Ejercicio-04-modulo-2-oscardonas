<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="126dp"
        android:layout_height="137dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/sketch_od"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:textSize="@dimen/TamanoNombre"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Profesion"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/TamanoProfesion"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:textSize="@dimen/TamanoProfesion"
        android:paddingLeft="@dimen/MargenIzquierdo"
        android:paddingTop="@dimen/PaddingSuperior"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress|textCapCharacters"
        android:hint="Your email"
        android:paddingLeft="@dimen/MargenIzquierdo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESSAGE"
        android:textSize="@dimen/TamanoProfesion"
        android:paddingLeft="@dimen/MargenIzquierdo"
        android:paddingTop="@dimen/PaddingSuperior"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:inputType="textMultiLine"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT"
        android:textSize="@dimen/TamanoProfesion"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>